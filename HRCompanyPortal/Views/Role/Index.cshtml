@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>


<h1>Roles</h1>

<a asp-action="Create" class="btn btn-danger"> Create a Role</a>
<table>
    <tr>
        <th>
            Id
        </th>
        <th>Name</th>
        <th>Users</th>
        <th>Update Role</th>
        <th>Delete Role</th>
    </tr>

        @foreach (var role in Model)
        {
<tr>
    <td>@role.Id</td>

    <td>@role.Name</td>
    <td></td>
    <td><a class="btn btn-primary" asp-action="Update" asp-route-id="@role.Id">Update Role</a></td>  
    <td>
        <form asp-action="Delete" asp-route-id="@role.Id" method="post">

            <button type="submit" class="btn btn-danger">Delete Role</button>
        </form>
    </td>
</tr>
    }
</table>