@model EditRole

@using HRCompanyPortal.Areas.Identity.Data
<h1>Update Role</h1>

<a asp-action="Index" class="btn btn-secondary">Back</a>


<form method="post">


    <input type="hidden" name="roleName" value="@Model.Role.Name" />
    <input type="hidden" name="roleId" value="@Model.Role.Id" />

    <h2> Add to @Model.Role.Name</h2>
    <table>

        @if (Model.NonMembers.Count() == 0)
        {
            <tr><td colspan="2">All users are members in our application</td></tr>
        }
        else
        {

            @foreach (HRCompanyPortalUser user in Model.NonMembers)
            {

                <tr>

                    <td>@user.UserName</td>
                    <td>

                        <input type="checkbox" name="AddIds" value="@user.Id" />
                    </td>
                </tr>

            }
        }
    </table>



    <h2> Remove from @Model.Role.Name</h2>
    <table>

        @if (Model.Members.Count() == 0)
        {
            <tr><td colspan="2">No users are Members</td></tr>
        }
        else
        {

            @foreach (HRCompanyPortalUser user in Model.Members)
            {

                <tr>

                    <td>@user.UserName</td>
                    <td>

                        <input type="checkbox" name="DeleteIds" value="@user.Id" />
                    </td>
                </tr>

            }
        }
    </table>

    <button type="submit" class="btn btn-primary">Save </button>

</form>